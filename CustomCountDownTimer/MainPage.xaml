<UserControl x:Class="CustomCountDownTimer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:thisProject="clr-namespace:CustomCountDownTimer"
    mc:Ignorable="d">
    <!--d:DesignHeight="300" d:DesignWidth="400" -->

    <Grid x:Name="LayoutRoot" Background="White">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="400" />
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
            <StackPanel>
                <thisProject:TimerPanel x:Name="timerPanelChild" />
                <StackPanel Orientation="Horizontal" Margin="0,-48,0,0" HorizontalAlignment="Right">
                    <Button Margin="0,0,295,0" Template="{StaticResource CancelButtonTemplate}" Height="48" Click="stopTimer"></Button>
                    <Button Template="{StaticResource AcceptButtomTemplate}" Click="pausePlayIndicator" Height="48"></Button>
                </StackPanel>
                <StackPanel Height="25" Orientation="Horizontal" Margin="15,0,0,0">
                    <StackPanel.DataContext>
                        <thisProject:Timer/>
                    </StackPanel.DataContext>
                    <TextBox Text="{Binding Duration, Mode=TwoWay}"/>
                    <TextBox x:Name="tBox" LostFocus="TBox_OnLostFocus" Width="40"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="0">
            <thisProject:OptionsPaneView Margin="100,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>